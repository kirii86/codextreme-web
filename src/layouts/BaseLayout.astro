---
import "@/styles/tailwind.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SeoMeta from "@/components/SeoMeta.astro";
import AccessibilityToolbar from "@/components/AccessibilityToolbar.astro";
import CookieBanner from "@/components/CookieBanner.astro";
import { languageList } from "@/i18n/ui";

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
  schema?: string;
}

const defaultSchema = JSON.stringify({
  "@context": "http://schema.org",
  "@type": "WebSite",
  url: "https://www.codextreme.es",
  name: "CodeXtremeOS",
  description:
    "La mejor ISO de Windows 10/11 optimizada con NTLite para gaming y máximo rendimiento.",
  potentialAction: {
    "@type": "SearchAction",
    target: "https://www.codextreme.es/buscar?q={search_term_string}",
    "query-input": "required name=search_term_string",
  },
});

const {
  title = "CodeXtremeOS: Windows Optimizado para Gaming | Mejora FPS y Rendimiento",
  description = "Descarga CodeXtremeOS, la mejor ISO de Windows 10/11 optimizada con NTLite para gaming y máximo rendimiento. Elimina bloatware, lower latency, mejora tus FPS, y disfruta de un consumo de recursos mínimo con seguridad garantizada.",
  keywords = "Windows optimizado, gaming, rendimiento, CodeXtremeOS, PC gaming, optimización Windows, windows gaming, mejorar FPS, sistema operativo gaming, ISO NTLite, sin bloatware",
  ogImage = "https://www.codextreme.es/image.png",
  canonical,
  noindex = false,
  schema = defaultSchema,
} = Astro.props;

const currentLang = Astro.currentLocale || "en";
---

<!doctype html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags y URLs canónicas -->
    <SeoMeta
      title={title}
      description={description}
      canonical={canonical}
      noindex={noindex}
    />

    <!-- Título SEO dinámico -->
    <title>{title}</title>

    <!-- Meta Tags SEO dinámicos -->
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph dinámico -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter Cards dinámico -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon y iconos -->
    <link rel="icon" href="/favicon.webp" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#6B5B95" />

    <!-- Schema Markup JSON-LD -->
    <script type="application/ld+json" set:html={schema} />
  </head>
  <body
    class="bg-white dark:bg-[#141414] text-gray-900 dark:text-gray-100 min-h-screen relative"
  >
    <Header />
    <main class="min-h-[calc(100vh-8rem)] relative z-10">
      <!-- Contenido -->
      <slot />
    </main>
    <Footer />
    <AccessibilityToolbar />
    <CookieBanner />
  </body>
</html>
